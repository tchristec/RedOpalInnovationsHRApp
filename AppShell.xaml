<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RedOpalInnovationsHRApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RedOpalInnovationsHRApp"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="AddEmployeePage"
        ContentTemplate="{DataTemplate local:AddEmployeePage}"
        Route="AddEmployeePage" />

    <ShellContent
        Title="EmployeeListPage"
        ContentTemplate="{DataTemplate local:EmployeeListPage}"
        Route="EmployeeListPage" />

    <ShellContent
        Title="EmployeeDetails"
        ContentTemplate="{DataTemplate local:EmployeeDetails}"
        Route="EmployeeDetails" />

    <ShellContent
        Title="UpdateEmployeePage"
        ContentTemplate="{DataTemplate local:UpdateEmployeePage}"
        Route="UpdateEmployeePage" />

</Shell>
