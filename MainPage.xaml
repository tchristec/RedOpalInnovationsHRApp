<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedOpalInnovationsHRApp.MainPage">

    <Grid RowDefinitions="2*, 9*"
          ColumnDefinitions="2*, 1*"
          Padding="0"
          RowSpacing="0"
          ColumnSpacing="0">

        <Image Grid.ColumnSpan="1"
               Source="roi_logo_colored.png"
               BackgroundColor="Transparent"
               Aspect="AspectFit"/>

        <Image Grid.Column="2"
               Source="grey_texture_image.png"
               BackgroundColor="Transparent"
               Aspect="AspectFit"/>

        <Image Grid.Column="2"
               Source="contacts_icon.svg"
               BackgroundColor="Transparent"
               Aspect="AspectFit"/>

        <Image Grid.ColumnSpan="3"
               Grid.Row="1"
               Source="black_texture_image.png"
               BackgroundColor="Transparent"
               Aspect="AspectFill"/>

        

    </Grid>


</ContentPage>
